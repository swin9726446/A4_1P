<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a9726446.a4_1p.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <!--
        Instruction message to aid users in what to do in this activity.
        - Text: References a resource file.
    -->
    <TextView
        android:id="@+id/txtInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/strInstruction"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--
        Used to house the two buttons and keep them organised, while still utilising constraint layouts.
    -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="233dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--
            A button to launch the distance conversion activity.
        -->
        <Button
            android:id="@+id/btnDist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strDistance"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="336dp" />

        <Button
            android:id="@+id/btnTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strTemperature"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="411dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
